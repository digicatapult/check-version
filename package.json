{
  "name": "@digicatapult/check-version",
  "version": "1.5.12",
  "description": "Asserts package version is the same or higher than latest published tag",
  "main": "dist/index.mjs",
  "type": "module",
  "scripts": {
    "depcheck": "depcheck",
    "check": "tsc",
    "build": "ncc build  --license licenses.txt ./src/main.ts && mv ./dist/index.js ./dist/index.mjs",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint .",
    "test": "NODE_OPTIONS='--no-experimental-strip-types' mocha --config mocharc.json ./src/**/__tests__/**/*.test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digicatapult/check-version.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "semver": "^7.7.3",
    "toml": "^3.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@swc-node/register": "^1.11.1",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.3",
    "@tsconfig/node12": "^12.1.7",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.25",
    "@types/semver": "^7.7.1",
    "@types/sinon": "^21.0.0",
    "@typescript-eslint/parser": "^8.48.1",
    "@vercel/ncc": "^0.38.4",
    "chai": "^6.2.1",
    "depcheck": "^1.4.7",
    "eslint": "^9.39.1",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "mocha": "^11.7.5",
    "prettier": "^3.7.4",
    "sinon": "^21.0.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": "24.x",
    "npm": "11.x"
  }
}
